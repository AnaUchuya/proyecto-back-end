<%- include('header') -%>
    <h1>Crear canción</h1>
    <form action="/canciones/crear" method="POST">
        <div>
            <label for="">Título</label>
            <input type="text" name="titulo">
        </div>
        <div>
            <label for="">Duración</label>
            <input type="text" name="duracion">
        </div>  
        <!-- <div>
            <label for="">Fecha de creación</label>
            <input type="date" name="fecha_crear">
        </div>
        <div>
            <label for="">Fecha de actualización</label>
            <input type="date" name="fecha_actualizar">
        </div> -->
        <div>
            <label for="">Genero</label>
            <select name="genero">
                <% for(let i = 0; i < generos.length; i++) { %>
                <option value="<%=generos[i].id%>">
                    <%=generos[i].name%>
                </option>
                <%   } %>
            </select>
        </div>
        <div>
            <label for="">Album</label>
            <select name="album">
                <% for(let i = 0; i < albumes.length; i++) { %>
                <option value="<%=albumes[i].id%>">
                    <%=albumes[i].nombre%>
                </option>
                <%  } %>
            </select>
        </div>
        <div>
            <label for="">Artista</label>
            <select name="artista">
                <% for(let i = 0; i < artistas.length; i++) { %>
                <option value="<%=artistas[i].id%>">
                    <%=artistas[i].nombre + ' ' + artistas[i].apellido%>
                </option>
                <%  } %>
            </select>
        </div>
        <!-- <div>
            <label for="">Album</label>
            <input type="text" name="album">
        </div> -->
        <!-- <div>
            <label for="">Artista</label>
            <input type="text" name="artista">
        </div> -->
        <button type="submit">Crear</button>
    </form>
<%- include('footer') -%>