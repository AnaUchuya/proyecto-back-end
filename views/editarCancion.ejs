<%- include('header') -%>
    <h1>Editar canción</h1>
    <form action="/canciones/editar/<%=cancion.id%>?_method=PUT" method="POST">
        <div>
            <label for="">Título</label>
            <input type="text" name="titulo" value="<%cancion.titulo%>">
        </div>
        <div>
            <label for="">Duración</label>
            <input type="text" name="duracion" value="<%cancion.duracion%>">
        </div>  
        <div>
            <label for="">Genero</label>
            <select name="genero">
                <% for(let i = 0; i < generos.length; i++) { %>
                    <% if(generos[i].id == cancion.genero_id){ %>
                        <option value="<%=generos[i].id%>" selected>
                        <%=generos[i].name%>
                        </option>
                    <% } else {%>
                        <option value="<%=generos[i].id%>">
                            <%=generos[i].name%>
                            </option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div>
            <label for="">Album</label>
            <select name="album">
                <% for(let i = 0; i < albumes.length; i++) { %>
                    <% if(albumes[i].id == cancion.album_id){ %>
                <option value="<%=albumes[i].id%>" selected>
                    <%=albumes[i].nombre%>
                </option>
                <% } else {%>
                    <option value="<%=albumes[i].id%>">
                        <%=albumes[i].nombre%>
                    </option>
                    <% } %>
                <%  } %>
            </select>
        </div>
        <div>
            <label for="">Artista</label>
            <select name="artista">
                <% for(let i = 0; i < artistas.length; i++) { %>
                    <% if(artistas[i].id == cancion.artista_id){ %>
                <option value="<%=artistas[i].id%>" selected>
                    <%=artistas[i].nombre + ' ' + artistas[i].apellido%>
                </option>
                <% } else {%>
                    <option value="<%=artistas[i].id%>">
                        <%=artistas[i].nombre + ' ' + artistas[i].apellido%>
                    </option>
                    <% } %>
                <%  } %>
            </select>
        </div>
        <button type="submit">Editar</button>
    </form>
<%- include('footer') -%>